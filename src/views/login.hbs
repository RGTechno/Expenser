<body>
    <h1 class="text-center">Login</h1>
    <form class="text-center border border-primary m-3 p-3" action="/account/login" method="POST">
        <div class="form-group">
            <label for="username">UserName</label>
            <input type="text" class="form-control text-center" name="username" id="username">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control text-center" name="password" id="password">            
        </div>
        <button type="submit" class="btn btn-info m-1">Login</button>
    </form>
</body>

</html>